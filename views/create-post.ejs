<% include _header %>
<form class="create-post-form" action="/discussion/<%= discussionId %>/create_post" method="post">
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" class="form-control" name="title" id="title">
  </div>
  <div class="form-group">
    <label for="content">Content:</label>
    <textarea class="form-control" name="content" id="content" rows="8" cols="80"></textarea>
  </div class="form-group">
    <input type="submit" value="create new post" class="btn btn-primary btn-block">
  </div>
</form>
<% include _footer %>
